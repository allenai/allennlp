{
    "dataset_reader": {
        "type": "quarel",
        "align_world_extractions": true,
        "lazy": false,
        "lf_syntax": "quarel_friction",
        "question_token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        },
        "replace_world_entities": true,
        "sample": -1,
        "world_extraction_model": "/inputs/allennlp-models/quarel-f-tagger-try3-model.tar.gz"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 1
    },
    "model": {
        "type": "quarel_parser",
        "action_embedding_dim": 50,
        "attention": {
            "type": "dot_product"
        },
        "decoder_beam_search": {
            "beam_size": 5
        },
        "dropout": 0.2,
        "encoder": {
            "type": "lstm",
            "bidirectional": false,
            "hidden_size": 50,
            "input_size": 100,
            "num_layers": 1
        },
        "max_decoding_steps": 30,
        "question_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 100,
                "pretrained_file": "/inputs/glove/glove.6B.100d.txt.gz",
                "trainable": false
            }
        }
    },
    "train_data_path": "/inputs/friction-q-v3xl/friction-q-v3xl-train.jsonl",
    "validation_data_path": "/inputs/friction-q-v3xl/friction-q-v3xl-dev.jsonl",
    "trainer": {
        "cuda_device": -1,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 10
        },
        "num_epochs": 100,
        "num_serialized_models_to_keep": 2,
        "optimizer": {
            "type": "adam"
        },
        "patience": 40,
        "validation_metric": "+parse_acc"
    },
    "vocabulary": {
        "non_padded_namespaces": [
            "actions"
        ]
    },
    "validation_dataset_reader": {
        "type": "quarel",
        "align_world_extractions": false,
        "lazy": false,
        "lf_syntax": "quarel_friction",
        "question_token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        },
        "replace_world_entities": true,
        "sample": -1,
        "world_extraction_model": "/inputs/allennlp-models/quarel-f-tagger-try3-model.tar.gz"
    }
}