{
    "dataset_reader": {
        "type": "nlvr",
        "output_agendas": true
    },
    "iterator": {
        "type": "epoch_tracking_bucket",
        "batch_size": 4,
        "padding_noise": 0,
        "sorting_keys": [
            [
                "sentence",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "nlvr_coverage_parser",
        "action_embedding_dim": 50,
        "attention": {
            "type": "dot_product"
        },
        "beam_size": 40,
        "checklist_cost_weight": 0.8,
        "dropout": 0.3,
        "dynamic_cost_weight": {
            "rate": 0.1,
            "wait_num_epochs": 0
        },
        "encoder": {
            "type": "lstm",
            "hidden_size": 10,
            "input_size": 25,
            "num_layers": 1
        },
        "max_decoding_steps": 40,
        "max_num_finished_states": 40,
        "penalize_non_agenda_actions": true,
        "sentence_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "allennlp/tests/fixtures/data/nlvr/sample_grouped_data.jsonl",
    "validation_data_path": "allennlp/tests/fixtures/data/nlvr/sample_grouped_data.jsonl",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 1,
        "optimizer": {
            "type": "sgd",
            "lr": 0.01
        },
        "patience": 2
    },
    "vocabulary": {
        "non_padded_namespaces": [
            "denotations",
            "rule_labels"
        ]
    }
}
