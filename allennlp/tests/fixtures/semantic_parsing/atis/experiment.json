{
  "dataset_reader": {
    "type": "atis"
  },
  "validation_dataset_reader": {
    "type": "atis"
  },
  "train_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "validation_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "model": {
    "type": "atis_parser",
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 200,
        "trainable": true
      }
    },
    "action_embedding_dim": 100,
    "encoder": {
      "type": "lstm",
      "input_size": 200,
      "hidden_size": 100,
      "bidirectional": true,
      "num_layers": 1
    },
    "entity_encoder": {
      "type": "boe",
      "embedding_dim": 200,
      "averaged": true
    },
    "decoder_beam_search": {
      "beam_size": 10
    },
    "max_decoding_steps": 200,
    "attention": {"type": "dot_product"},
    "dropout": 0.5
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 3,
    "patience": 5,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    }
  }
}
