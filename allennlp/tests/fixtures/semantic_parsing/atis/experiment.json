{
  "dataset_reader": {
    "type": "atis",
    "database_file": "allennlp/tests/fixtures/data/atis/atis.db"
  },
  "train_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "validation_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "model": {
    "type": "atis_parser",
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 400,
        "trainable": true
      }
    },
    "action_embedding_dim": 200,
    "encoder": {
      "type": "lstm",
      "input_size": 400,
      "hidden_size": 800,
      "bidirectional": true,
      "num_layers": 1
    },
    "decoder_beam_search": {
    "beam_size": 10
    },
    "training_beam_size": 5,
    "max_decoding_steps": 200,
    "input_attention": {"type": "dot_product"},
    "dropout": 0.5,
    "database_file": "./allennlp/models/semantic_parsing/atis/atis.db"
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 16
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 5,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    }
  }
}
