{
  "dataset_reader": {
    "type": "ratecalculus"
  },
  "train_data_path": "tests/fixtures/data/ratecalculus/sample_data.json",
  "validation_data_path": "tests/fixtures/data/ratecalculus/sample_data.json",
  "model": {
    "type": "ratecalculus_parser",
    "question_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "action_embedding_dim": 50,
    "encoder": {
      "type": "lstm",
      "input_size": 50,
      "hidden_size": 10,
      "num_layers": 1
    },
    "entity_encoder": {
      "type": "boe",
      "embedding_dim": 25,
      "averaged": true
    },
    "checklist_cost_weight": 0.6,
    "max_decoding_steps": 10,
    "decoder_beam_size": 10,
    "decoder_num_finished_states": 200,
    "attention_function": {"type": "dot_product"},
    "num_linking_features": 8
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["question", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    }
  }
}
