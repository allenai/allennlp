{
  "dataset_reader": {
    "type": "event2mind",
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "spacy"
      }
    },
    "target_tokenizer": {
      "type": "word"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    }
  },
  "vocabulary": {
    "min_count": {"tokens": 1}
  },
  "train_data_path": "allennlp/tests/fixtures/data/event2mind_medium.csv",
  "validation_data_path": "allennlp/tests/fixtures/data/event2mind_medium.csv",
  "model": {
    "type": "event2mind",
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "vocab_namespace": "source_tokens",
          "embedding_dim": 10,
          "trainable": true
        }
      }
    },
    "embedding_dropout": 0.2,
    "encoder": {
      "type": "gru",
      "input_size": 10,
      "hidden_size": 10,
      "num_layers": 1,
      "bidirectional": true
    },
    "max_decoding_steps": 10,
    "target_namespace": "target_tokens"
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 10,
    "sorting_keys": [["source", "num_tokens"]]
  },
  "trainer": {
    "num_epochs": 2,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam"
    }
  }
}
