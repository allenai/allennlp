{
    "dataset_reader": {
        "type": "squad",
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "character_tokenizer": {
                    "byte_encoding": "utf-8"
                }
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 40,
        "padding_noise": 0,
        "sorting_keys": [
            [
                "passage",
                "num_tokens"
            ],
            [
                "question",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "bidaf",
        "modeling_layer": {
            "type": "lstm",
            "hidden_size": 10,
            "input_size": 40,
            "num_layers": 1
        },
        "num_highway_layers": 1,
        "phrase_layer": {
            "type": "lstm",
            "hidden_size": 10,
            "input_size": 10,
            "num_layers": 1
        },
        "similarity_function": {
            "type": "linear",
            "combination": "x,y,x*y",
            "tensor_1_dim": 10,
            "tensor_2_dim": 10
        },
        "span_end_encoder": {
            "type": "lstm",
            "hidden_size": 10,
            "input_size": 70,
            "num_layers": 1
        },
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 8,
                        "num_embeddings": 260
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 8,
                        "ngram_filter_sizes": [
                            5
                        ],
                        "num_filters": 8
                    }
                },
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 2,
                    "trainable": false
                }
            }
        }
    },
    "train_data_path": "allennlp/tests/fixtures/data/squad.json",
    "validation_data_path": "allennlp/tests/fixtures/data/squad.json",
    "trainer": {
        "cuda_device": -1,
        "grad_norm": 10,
        "num_epochs": 1,
        "optimizer": {
            "type": "adadelta",
            "lr": 0.5,
            "rho": 0.95
        },
        "patience": 12
    }
}
