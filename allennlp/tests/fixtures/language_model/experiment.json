{
  "dataset_reader": {
    "type": "language_modeling",
    "tokenizer": {
      "type": "basic"
    },
    "tokens_per_instance": 4
  },
  "vocabulary": {
    "min_count": {"tokens" : 0},
  },
  "train_data_path": "tests/fixtures/data/ptb.txt",
  "validation_data_path": "tests/fixtures/data/ptb.txt",
  "evaluate_on_test": true,
  "model": {
    "type": "word-lm",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 30,
        "trainable": true
      }
    },
    "encoder": {
      "type": "stateful_lstm",
      "num_layers": 2, 
      "input_size": 30,
      "hidden_size": 64,
      "dropout": 0.5
    },
    "proj": true,
    "relu": true,
    "dropout": 0.5,
    "softmax": {
      "type": "adaptive",
      "input_dim": 30,
      "cutoff": [],
      "label_namespace": "tokens"
    }
  },
  "iterator": {
    "type": "strided",
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 10,
    "patience": 2,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "-ppl",
    "num_serialized_models_to_keep":2,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "mode": "min",
      "factor": 0.2,
      "patience": 1
    }
  }
}