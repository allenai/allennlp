{
  "dataset_reader": {
    "type": "seq2seq",
    "source_tokenizer": {
      "type": "spacy",
      "pos_tags": true,
      "parse": true,
      "ner": true
    },
    "target_tokenizer": {
      "type": "spacy"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "tokens"
      },
      "pos_tags": {
        "type": "pos_tag",
        "namespace": "pos"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "tokens"
      }
    }
  },
  "train_data_path": "allennlp/tests/fixtures/data/seq2seq_copy.tsv",
  "validation_data_path": "allennlp/tests/fixtures/data/seq2seq_copy.tsv",
  "model": {
    "type": "composed_seq2seq",
    "source_text_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "vocab_namespace": "tokens",
          "embedding_dim": 8
        },
        "pos_tags": {
          "type": "embedding",
          "vocab_namespace": "pos",
          "embedding_dim": 8
        }
      }
    },
    "encoder": {
      "type": "stacked_self_attention",
      "input_dim": 16,
      "projection_dim": 4,
      "hidden_dim": 8,
      "feedforward_hidden_dim": 16,
      "num_layers": 1,
      "num_attention_heads": 4
    },
    "decoder": {
      "target_namespace": "tokens",
      "target_embedder": {
        "vocab_namespace": "tokens",
        "embedding_dim": 8
      },
      "decoder_net": {
        "type": "stacked_self_attention",
        "target_embedding_dim": 8,
        "decoding_dim": 8,
        "feedforward_hidden_dim": 16,
        "num_layers": 2,
        "num_attention_heads": 2
      },
      "tie_output_embedding": true,
      "max_decoding_steps": 120,
      "beam_size": 5,
      "label_smoothing_ratio": 0.1,
    },
    "tied_source_embedder_key": "tokens"
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 2,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}
