{
    "dataset_reader": {
        "type": "quac",
        "num_context_answers": 2,
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "character_tokenizer": {
                    "byte_encoding": "utf-8",
                    "end_tokens": [
                        260
                    ],
                    "start_tokens": [
                        259
                    ]
                }
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 10,
        "max_instances_in_memory": 1000,
        "sorting_keys": [
            [
                "question",
                "num_fields"
            ],
            [
                "passage",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "dialog_qa",
        "dropout": 0.3,
        "initializer": [],
        "marker_embedding_dim": 5,
        "num_context_answers": 2,
        "phrase_layer": {
            "type": "gru",
            "bidirectional": true,
            "hidden_size": 5,
            "input_size": 20,
            "num_layers": 1
        },
        "residual_encoder": {
            "type": "gru",
            "bidirectional": true,
            "hidden_size": 5,
            "input_size": 10,
            "num_layers": 1
        },
        "span_end_encoder": {
            "type": "gru",
            "bidirectional": true,
            "hidden_size": 5,
            "input_size": 20,
            "num_layers": 1
        },
        "span_start_encoder": {
            "type": "gru",
            "bidirectional": true,
            "hidden_size": 5,
            "input_size": 10,
            "num_layers": 1
        },
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "dropout": 0.2,
                    "embedding": {
                        "embedding_dim": 20,
                        "num_embeddings": 262
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 20,
                        "ngram_filter_sizes": [
                            5
                        ],
                        "num_filters": 10
                    }
                }
            }
        }
    },
    "train_data_path": "allennlp/tests/fixtures/data/quac_sample.json",
    "validation_data_path": "allennlp/tests/fixtures/data/quac_sample.json",
    "trainer": {
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 2
        },
        "num_epochs": 1,
        "optimizer": {
            "type": "adam",
            "betas": [
                0.9,
                0.9
            ]
        },
        "patience": 10,
        "validation_metric": "+f1"
    },
    "validation_iterator": {
        "type": "bucket",
        "batch_size": 3,
        "max_instances_in_memory": 1000,
        "sorting_keys": [
            [
                "question",
                "num_fields"
            ],
            [
                "passage",
                "num_tokens"
            ]
        ]
    }
}
