{
  "dataset_reader":{"type":"srl"},
  "train_data_path": "tests/fixtures/data/srl",
  "validation_data_path": "tests/fixtures/data/srl",
  "model": {
    "type": "srl",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "tests/fixtures/embeddings/glove.6B.100d.sample.txt.gz",
        "embedding_dim": 100,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 150,
      "hidden_size": 10,
      "num_layers": 1
