{
    "dataset_reader": {
        "lazy": false,
        "type": "text_classification_json",
        "tokenizer": {
            "word_splitter": "spacy"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true,
                "end_tokens": ["@@PADDING@@", "@@PADDING@@"],
                "start_tokens": ["@@PADDING@@", "@@PADDING@@"]
            }
        },
        "max_sequence_length": 400
    },
    "validation_dataset_reader": {
        "lazy": false,
        "type": "text_classification_json",
        "tokenizer": {
            "word_splitter": "spacy"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true,
                "end_tokens": ["@@PADDING@@", "@@PADDING@@"],
                "start_tokens": ["@@PADDING@@", "@@PADDING@@"]
            }
        },
        "max_sequence_length": 400
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "allennlp/tests/fixtures/data/text_classification_json/imdb_train.jsonl",
"validation_data_path": "allennlp/tests/fixtures/data/text_classification_json/imdb_test.jsonl",
    "model": {
        "type": "classifier",
        "input_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "trainable": true
                }
            }
        },
        "encoder": {
           "type": "cnn",
           "num_filters": 100,
           "embedding_dim": 300,
           "output_dim": 512
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": -1,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}
