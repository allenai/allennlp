{
  "dataset_reader": {
    "type": "snli",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "tests/fixtures/data/snli.jsonl",
  "validation_data_path": "tests/fixtures/data/snli.jsonl",
  "model": {
    "type": "decomposable_attention",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "projection_dim": 2,
        "pretrained_file": "tests/fixtures/glove.6B.300d.sample.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "attend_feedforward": {
      "input_dim": 2,
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": "relu"
    },
    "similarity_function": {"type": "dot_product"},
    "compare_feedforward": {
      "input_dim": 4,
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": "relu"
    },
    "aggregate_feedforward": {
      "input_dim": 4,
      "num_layers": 1,
      "hidden_dims": 3,
      "activations": "linear"
    },
    "initializer": {
      "default": {
        "type": "normal",
        "mean": 0,
        "std": 0.1
      },
      "exclude": ["token_embedder_tokens"]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["premise", "num_tokens"], ["hypothesis", "num_tokens"]],
    "batch_size": 40
  },
  "optimizer": {
    "type": "adadelta",
    "lr": 1.0
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 5,
    "cuda_device": -1,
    "serialization_dir" : "tests/fixtures/decomposable_attention/serialization"
  }
}
