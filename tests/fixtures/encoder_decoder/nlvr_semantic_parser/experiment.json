{
  "dataset_reader": {
    "type": "nlvr"
  },
  "vocabulary": {
    "non_padded_namespaces": ["actions", "denotations"]
  },
  "train_data_path": "tests/fixtures/data/nlvr/sample_data.jsonl",
  "validation_data_path": "tests/fixtures/data/nlvr/sample_data.jsonl",
  "model": {
    "type": "nlvr_parser",
    "sentence_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 25,
      "hidden_size": 10,
      "num_layers": 1
    },
    "decoder_trainer": {
      "type": "max_marginal_likelihood"
    },
    "decoder_beam_search": {
      "beam_size": 3
    },
    "max_decoding_steps": 20,
    "action_namespace": "actions",
    "action_embedding_dim": 10,
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    }
  }
}
