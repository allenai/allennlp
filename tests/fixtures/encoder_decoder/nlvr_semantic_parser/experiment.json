{
  "dataset_reader": {
    "type": "nlvr",
    "add_paths_to_agenda": true
  },
  "vocabulary": {
    "non_padded_namespaces": ["actions", "denotations"]
  },
  "train_data_path": "tests/fixtures/data/nlvr/sample_data.jsonl",
  "validation_data_path": "tests/fixtures/data/nlvr/sample_data.jsonl",
  "model": {
    "type": "nlvr_parser",
    "sentence_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "nonterminal_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "rule_labels",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "terminal_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "rule_labels",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 25,
      "hidden_size": 10,
      "num_layers": 1
    },
    "decoder_trainer": {
      "type": "beam_search",
      "beam_size": 20
    },
    "max_decoding_steps": 20,
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 1,
    "patience": 2,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    }
  }
}
