{
    "dataset_reader": {
      "type": "triviaqa",
      "lazy": "true",
      "paragraph_picker": "triviaqa-web-train",
      "triviaqa_path": "/triviaqa_processed",
      "data_format": "preprocessed",
      "max_token_length": 20,
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
          "type": "characters",
          "character_tokenizer": {
            "byte_encoding": "utf-8"
          }
        }
      }
    },
    "validation_dataset_reader": {
      "type": "triviaqa",
      "lazy": "false",
      "triviaqa_path": "/triviaqa_processed",
      "data_format": "preprocessed",
      "max_token_length": 20,
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": true
        },
        "token_characters": {
          "type": "characters",
          "character_tokenizer": {
            "byte_encoding": "utf-8"
          }
        }
      }
    },
    "train_data_path": "web-train.jsonl",
    "validation_data_path": "web-dev.jsonl",
    "model": {
      "type": "document-qa",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.300d.txt.gz",
        "embedding_dim": 300,
        "trainable": false
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "num_embeddings": 260,
            "embedding_dim": 20
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 20,
            "num_filters": 20,
            "ngram_filter_sizes": [5]
          }
        }
      },
      "phrase_layer": {
        "type": "gru",
        "input_size": 320,
        "hidden_size": 140,
        "num_layers": 1,
        "bidirectional": true
      },
      "residual_encoder": {
        "type": "gru",
        "input_size": 280,
        "hidden_size": 140,
        "num_layers": 1,
        "bidirectional": true
      },
      "span_start_encoder": {
        "type": "gru",
        "input_size": 280,
        "hidden_size": 140,
        "num_layers": 1,
        "bidirectional": true
      },
      "span_end_encoder": {
        "type": "gru",
        "input_size": 560,
        "hidden_size": 140,
        "num_layers": 1,
        "bidirectional": true
      }
    },
    "iterator": {
      "type": "bucket",
      "batch_size": 20,
      "max_instances_in_memory": 1000,
      "biggest_batch_first": true,
      "sorting_keys": [["paragraphs", "list_num_tokens"], ["question", "num_tokens"]]
    },
    "trainer": {
      "num_epochs": 100,
      "grad_norm": 10.0,
      "num_serialized_models_to_keep": 20,
      "patience" : 100,
      "cuda_device" : 0,
      "learning_rate_scheduler": {
          "type": "reduce_on_plateau",
          "factor": 0.5,
          "mode": "max",
          "patience": 2
      },
      "validation_metric": "+em",
      "optimizer": {
        "type": "adam",
        "betas": [0.9, 0.9]
      }
    }
  }
