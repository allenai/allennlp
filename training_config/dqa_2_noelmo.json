{
  "dataset_reader": {
    "type": "dqa",
    "prev_a": 2,
    "lazy": true,
    "prev_q_followup": true,
    "token_indexers": {
      "token_characters": {
        "type": "characters",
        "character_tokenizer": {
          "byte_encoding": "utf-8",
          "start_tokens": [259],
          "end_tokens": [260]
        }
      },
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "/home/eunsol/Data/dqa/simple/val_seq_final.json",
  "validation_data_path": "/home/eunsol/Data/dqa/simple/val_seq_final.json",
  "model": {
    "type": "dqa",
    "prev_a": 2,
    "text_field_embedder": {
      "tokens": {
                "type": "embedding",
                "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
                "embedding_dim": 100,
                "trainable": false
      },
      "token_characters": {
        "type": "character_encoding",
        "embedding": {
          "num_embeddings": 262,
          "embedding_dim": 20
        },
        "encoder": {
          "type": "cnn",
          "embedding_dim": 20,
          "num_filters": 100,
          "ngram_filter_sizes": [5]
        },
        "dropout": 0.2
      }
    },
    "phrase_layer": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 220,
      "hidden_size": 100,
      "num_layers": 1
    },
    "residual_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 1
    },
    "span_start_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 1
    },
    "span_end_encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 400,
      "hidden_size": 100,
      "num_layers": 1
    },
    "initializer": [
    ],
    "dropout": 0.3
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["question", "num_fields"], ["passage", "num_tokens"]],
    "batch_size": 10,
    "max_instances_in_memory": 1000
  },
  "validation_iterator": {
    "type": "bucket",
    "sorting_keys": [["question", "num_fields"], ["passage", "num_tokens"]],
    "batch_size": 3,
    "max_instances_in_memory": 1000
  },
  "trainer": {
    "num_epochs": 26,
    "patience": 10,
    "validation_metric": "+f1",
    "learning_rate_scheduler":  {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    },
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9]
    }
  }
}
