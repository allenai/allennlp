{
  "dataset_reader": {
    "type": "wikitables-preprocessed",
    "lazy": false,
    "question_token_indexers": {
      "tokens": {"type": "single_id"}
    }
  },
  "vocabulary": {
    "min_count": {"tokens": 3}
  },
  "train_data_path": "/wikitables_preprocessed/train.jsonl",
  "validation_data_path": "/wikitables_preprocessed/validation.jsonl",
  "model": {
    "type": "wikitables_parser",
    "question_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 200,
        "trainable": true
      }
    },
    "action_embedding_dim": 100,
    "encoder": {
      "type": "lstm",
      "input_size": 400,
      "hidden_size": 100,
      "bidirectional": true,
      "num_layers": 1
    },
    "entity_encoder": {
      "type": "boe",
      "embedding_dim": 200,
      "averaged": true
    },
    "decoder_beam_search": {
      "beam_size": 3
    },
    "max_decoding_steps": 20,
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 1
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 5,
    "cuda_device": 0,
    "grad_norm": 5.0,
    "validation_metric": "+parse_acc",
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    },
    "learning_rate_scheduler": {
      "type": "exponential",
      "gamma": 0.99
    }
  }
}
