{
  "dataset_reader":{
    "type":"atis"
  },
  "train_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "validation_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "model": {
    "type": "atis",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "vocab_namespace": "tokens",
        "embedding_dim": 25,
        "trainable": true
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 25,
      "hidden_size": 10,
      "num_layers": 1
    },
    "max_decoding_steps": 20,
    "target_namespace": "tokens",
    "attention_function": {"type": "dot_product"}
  },
  "iterator": {
    "type": "basic",
    "batch_size": 1},
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    }
  }
}
