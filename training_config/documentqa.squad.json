{
    "dataset_reader": {
        "type": "squad",
        "multiparagraph": true,
        "token_indexers": {
        "tokens": {
            "type": "single_id",
            "lowercase_tokens": true
        },
        "token_characters": {
            "type": "characters",
            "character_tokenizer": {
            "byte_encoding": "utf-8",
            "start_tokens": [259],
            "end_tokens": [260]
            }
        }
        }
    },
    "train_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-train-v1.1.json",
    "validation_data_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/squad/squad-dev-v1.1.json",
    //"train_data_path": "tests/fixtures/data/squad.json",
    "model": {
      "type": "document-qa",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.300d.txt.gz",
          "embedding_dim": 300,
          "trainable": false
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "num_embeddings": 262,
            "embedding_dim": 20
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 20,
            "num_filters": 100,
            "ngram_filter_sizes": [5]
          },
          "dropout": 0.2
        }
      },
      "phrase_layer": {
        "type": "gru",
        "input_size": 400,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "residual_encoder": {
        "type": "gru",
        "input_size": 200,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "span_start_encoder": {
        "type": "gru",
        "input_size": 200,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      },
      "span_end_encoder": {
        "type": "gru",
        "input_size": 400,
        "hidden_size": 100,
        "num_layers": 1,
        "bidirectional": true
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["paragraphs", "list_num_tokens"], ["question", "num_tokens"]],
      "batch_size": 45
    },
    "trainer": {
      "num_epochs": 26,
      //"grad_norm": 10.0,
      "patience" : 10,
      "cuda_device" : 0,
      "learning_rate_scheduler": {
          "type": "reduce_on_plateau",
          "factor": 0.5,
          "mode": "max",
          "patience": 2
      },
      "optimizer": {
        "type": "adam",
        "betas": [0.9, 0.9]
      }
    }
  }
